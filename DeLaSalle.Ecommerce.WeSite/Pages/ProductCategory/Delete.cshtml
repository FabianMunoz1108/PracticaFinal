@page "{id:int?}"
@model DeLaSalle.Ecommerce.WebApplication.Pages.ProductCategory.DeleteModel
@{
}
<div class="container-fluid">
    <form method="post">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <br />
                <button id="btnSearch" class="btn btn-primary mr-3">Search</button>
                <a asp-page=".\Edit" class="btn btn-success">Add New </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <h1>Editing @Model.Producto.Name </h1>
                @if(ModelState.ErrorCount > 0)
                {

                }
                <div class="form-group">
                    <label asp-for="Producto.Id"></label>
                    <input asp-for="Producto.Id" class="form-control" readonly />
                    <span class="text-danger" asp-validation-for="Producto.Id"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Producto.Name"></label>
                    <input asp-for="Producto.Name" class="form-control" maxlength="45" />
                    <span class="text-danger" asp-validation-for="Producto.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Producto.Description"></label>
                    <input asp-for="Producto.Description" class="form-control" maxlength="100" />
                    <span class="text-danger" asp-validation-for="Producto.Description"></span>
                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary">Delete</button>
                        <button type="reset" class="btn btn-secondary">Cancelar</button>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
    </form>
</div>